<div class="container">
  <div class="row"></div>
  <div class="col-md-6 coll-md-offset-3 center">
    <h2>Log in</h2>
    <div class= "form-group">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "form-control" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "form-control" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", :class => "btn btn-primary"%>
        <%= link_to "Forgot Password", new_user_password_path, :class => "btn btn-primary"%>
      </div>
    <% end %>
  </div>
</div>


